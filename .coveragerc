# .coveragerc to control coverage.py
[run]
branch = True

omit =
    tst/*
    */__init__.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self\.debug
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:

# ignore_errors = True  # re-enable in case of issues

[html]
directory = coverage_report
